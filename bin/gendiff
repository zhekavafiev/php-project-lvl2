#!/usr/bin/env php

<?php

require_once __DIR__ . '/../src/autoload.php';

use function Differ\Differ\genDiff;

$doc = <<<'DOCOPT'
Usage:
    gendiff (-h| --help)
    gendiff (-v| --version)
    gendiff [--format <fmt>] [<firstFile>] [<secondFile>]
Options:
    -h             show this screen
    -v --version   show version
    --format <fmt> Report format [default: pretty]
DOCOPT;

$dataForDiff = Docopt::handle($doc, array('version' => '1.0.0rc2'));

$a = genDiff($dataForDiff['<firstFile>'], $dataForDiff['<secondFile>'], $dataForDiff['--format']);
print_r($a);
