#!/usr/bin/env php

<?php

require_once __DIR__ . '/../src/autoload.php';

use function Differ\Parse\parse;
use function Differ\Differ\processingDataFromFiles;
use function Differ\Parse\printResultFindDiff;

$doc = <<<'DOCOPT'
Usage:
    gendiff (-h| --help)
    gendiff (-v| --version)
    gendiff [--format <fmt>] [<firstFile>] [<secondFile>]
Options:
    -h             show this screen
    -v --version   show version
    --format <fmt> Report format [default: pretty]
DOCOPT;

$dataForDiff = Docopt::handle($doc, array('version' => '1.0.0rc2'));

/*foreach ($dataForDiff as $k=>$v) {
    echo $k.': '.json_encode($v).PHP_EOL;
}*/
if ($dataForDiff['<firstFile>'] != null && $dataForDiff['<secondFile>'] != null) {
    $dataForFindDiff = parse([
        'pathsbefore' => $dataForDiff['<firstFile>'],
        'pathsafter' => $dataForDiff['<secondFile>']
    ]);
    //print_r($dataForFindDiff);
    $diff = processingDataFromFiles($dataForFindDiff);
    print_r(printResultFindDiff($diff));
}